<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_5"
    tools:context=".ConfigurationOptionsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/optionsPethelperImageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/pet_lion_transbk" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reader Options"
                android:textColor="#000000"
                android:textSize="54sp" />

            <Button
                android:id="@+id/moreOptionsButton"
                style="@style/navButtonStyleNormal"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginEnd="30dp"
                android:layout_weight="0.3"
                android:background="@drawable/options_buttons"
                android:drawableLeft="@mipmap/cogwheel"
                android:onClick="moreOptionsClicked"
                android:paddingBottom="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="20dp"
                android:text="More"
                android:textSize="32dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OptionsHomeButton"
                style="@style/navButtonStyleNormal"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/options_buttons"
                android:drawableLeft="@mipmap/options_home"
                android:onClick="homeClicked"
                android:paddingBottom="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:text="Home"
                android:textSize="32dp" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/OptionsContentbutton"
                style="@style/navButtonStyleNormal"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/options_buttons"
                android:drawableLeft="@mipmap/options_contents"
                android:drawablePadding="-20dp"
                android:onClick="contentsClicked"
                android:paddingLeft="20dp"
                android:text="Contents"
                android:textSize="32dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="40dp"></View>

        <LinearLayout
            android:id="@+id/optionsPage1LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/optionVoiceOverButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/voice_over_on_enabled"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="fitXY"
                android:text="Voice Over On" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionSignLanguageButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/options_sign_language_on_enabled"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="fitXY"
                android:text="Sign language\nOn" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionExtraHintsButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/hints_on_enabled"
                android:elevation="30dp"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="centerInside"
                android:text="Extra Hints On" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionLikeBookButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/likeabook"
                android:elevation="30dp"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="30dp"
                android:paddingTop="30dp"
                android:scaleType="fitXY"
                android:text="Like a book" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/optionsPage2LinearLayout"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_marginEnd="25dp"
            android:layout_marginStart="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/optionFontTypeButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/fontchange_on_black"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="fitXY"
                android:text="Voice Over On" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionFontSizeButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/textsize_off_black"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="fitXY"
                android:text="Sign language\nOn" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionNarrationSpeedButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/speed_1"
                android:elevation="30dp"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="centerInside"
                android:text="Voice Over On" />

            <View
                android:layout_width="30dp"
                android:layout_height="match_parent"></View>

            <Button
                android:id="@+id/optionAutoplayButton"
                style="@style/optionButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/options_big_buttons"
                android:drawablePadding="-30dp"
                android:drawableTop="@mipmap/autoplay_on_enabled"
                android:elevation="30dp"
                android:gravity="bottom|center"
                android:onClick="optionButtonClicked"
                android:paddingBottom="15dp"
                android:paddingTop="30dp"
                android:scaleType="centerInside"
                android:text="Autoplay On" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/accesibilityButton"
                style="@style/navButtonStyleNormal"
                android:layout_width="175dp"
                android:layout_height="80dp"
                android:background="@drawable/options_buttons"
                android:drawableLeft="@mipmap/accessibility_icon"
                android:paddingStart="10dp"
                android:onClick="accesibilityClicked"
                android:text="Device\nAccessibility"
                android:textSize="18dp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"></View>
            <Button
                android:id="@+id/button"
                style="@style/navButtonStyleNormal"
                android:layout_width="300dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:background="@drawable/options_buttons"
                android:onClick="closeClicked"
                android:text="Done"
                android:textSize="32dp" />
            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"></View>
            <View
                android:layout_width="200dp"
                android:layout_height="80dp"></View>
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>