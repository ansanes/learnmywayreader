<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_pink"
    tools:context=".ChooseHowToLearnActivity">

    <ImageView
        android:id="@+id/petHelperImageView"
        android:layout_width="440dp"
        android:layout_height="341dp"
        app:srcCompat="@mipmap/pet_lion_transbk"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <TextView
        android:id="@+id/chooseHowToLearnTextView"
        android:layout_width="672dp"
        android:layout_height="337dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="32dp"
        android:background="@mipmap/speech_bubble1"
        android:text="Roooar!!\n\nNow let's choose how\nyou like to learn!"
        android:textSize="48dp"
        android:textColor="#000000"
        android:paddingTop="50dp"
        android:paddingStart="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include layout="@layout/nav_buttons_1" />


</android.support.constraint.ConstraintLayout>